%h1 Listing messages

%table
  %tr
    %th Sender
    %th Group
    %th Text
    %th Sent at
    %th
    %th
    %th

  - @messages.each do |message|
    %tr
      %td= message.sender
      %td= message.group
      %td= message.text
      %td= message.sent_at
      %td= link_to 'Show', message
      %td= link_to 'Edit', edit_message_path(message)
      %td= link_to 'Destroy', message, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

