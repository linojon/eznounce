= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender
    = f.text_field :sender
  .field
    = f.label :group
    = f.text_field :group
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :sent_at
    = f.datetime_select :sent_at
  .actions
    = f.submit 'Save'
